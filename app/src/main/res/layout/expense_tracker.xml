<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="4dp"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="18dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="409dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvExpenseName"
            android:layout_width="53dp"
            android:layout_height="23dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="32dp"
            android:fontFamily="@font/teachers"
            app:layout_constraintBottom_toBottomOf="@+id/tvExpense1"
            app:layout_constraintStart_toEndOf="@+id/tvExpense1"
            tools:text="Salary" />

        <ImageView
            android:id="@+id/tvExpense1"
            android:layout_width="33dp"
            android:layout_height="32dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/income_trx" />

        <TextView
            android:id="@+id/tvExpensePrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/teachers"
            android:text="Kes 40,000"
            app:layout_constraintBottom_toBottomOf="@+id/tvExpense1"
            app:layout_constraintEnd_toEndOf="@+id/tvExpenseName"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/tvExpenseName"
            app:layout_constraintTop_toBottomOf="@+id/tvExpenseName"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/tvExpenseDate1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/teachers"
            android:text="1 July 2024"
            app:layout_constraintBottom_toBottomOf="@+id/tvExpensePrice"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.723"
            app:layout_constraintStart_toEndOf="@+id/tvExpensePrice"
            app:layout_constraintTop_toTopOf="@+id/tvExpenseName"
            app:layout_constraintVertical_bias="1.0" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>